<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Competo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ui_blue</item>
        <item name="colorPrimaryVariant">@color/accent_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3753A1</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#292D32</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">#292D32</item>
    </style>

    <style name="SwitchTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">#1868A6</item>
    </style>

    <style name="button_color" parent="Theme.MaterialComponents.Light">
        <item name="android:background">@drawable/button_round_shape</item>
    </style>

    <style name="ProfileCustomTabText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="teamToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>
    
    
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
    </style>

    <style name="inputChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
    </style>

    <style name="roundButton_colourLightBlue" parent="Theme.MaterialComponents.Light">
        <item name="android:background">@drawable/eventpal_button_round</item>
    </style>

</resources>